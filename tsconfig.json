{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "noImplicitAny": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./built",
    "rootDirs": [
      "./",
      "./built/css-modules"
    ]
  },
  "exclude": [
    "node_modules",
    "built"
  ]
}